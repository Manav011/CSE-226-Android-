<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".locationandmaps.currentlocation.CurrentLocationMain"
    android:padding="30dp"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="Current Location:"
        />

    <TextView
        android:id="@+id/currloclatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="20dp"
        android:text="Latitude: -"
        />

    <TextView
        android:id="@+id/currloclongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="10dp"
        android:text="Longitude: -"
        />

    <TextView
        android:id="@+id/currlocprovider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="10dp"
        android:text="Provider: -"
        />

    <TextView
        android:id="@+id/currloccountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="10dp"
        android:text="Country: -"
        />

    <TextView
        android:id="@+id/currlocaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="10dp"
        android:text="Address: -"
        />

    <Button
        android:id="@+id/currlocgetloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Current Location" />

    <Button
        android:id="@+id/currlocopenmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Gmap"
        />

</LinearLayout>